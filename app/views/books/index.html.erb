<p id="notice"><%= notice %></p>

<h1>Books</h1>

<!--
  XXX
  Aqui esta el formulario, es muy similar al formulario del desafio de proyectos
  Vea el método/acción del controlador books asociada a esta vista: books#index
-->
<%= form_with url: 'books', method: :get do |form| %>
  <div>
    <%=form.label :query, "Filtrar libros:" %>
    <%= form.select :status, [
      ["Todos", :all],
      ["En estante", :shelf], ["Prestado", :lent]
    ],{selected: params[:status]}, class:'form-control' %>
  </div>
  <%= form.submit "Buscar" %>
<% end %>
<!-- FIN DEL FORMULARIO -->


<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Status</th>
      <th>Checkin</th>
      <th>Checkout</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.status %></td>
        <td><%= book.checkin %></td>
        <td><%= book.checkout %></td>
        <td><%= link_to 'Show', [@category, book] %></td>
        <td><%= link_to 'Edit', edit_category_book_path(@category, book) %></td>
        <td><%= link_to 'Destroy', [@category, book], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Back', category_path(@category) %> |
<%= link_to 'New Book', new_category_book_path(@category) %>
